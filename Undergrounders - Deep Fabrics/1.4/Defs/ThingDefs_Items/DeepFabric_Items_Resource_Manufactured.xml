<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="ResourceBase">
		<defName>undrgdrs_DarkstrandCloth</defName>
		<label>darkstrand</label>
		<description>Beautiful Fabric spun from microfibers extracted from darkstrand mushrooms. It is more insulating than standard cloth, and while not as strong as devilstrand it is surprisingly resilient.</description>
		<graphicData>
			<texPath>Things/Item/Resource/Cloth</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<color>(130,130,255)</color>
		</graphicData>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<MarketValue>4</MarketValue>
			<Mass>0.032</Mass>
			<Flammability>1.2</Flammability>
			<DeteriorationRate>3</DeteriorationRate>
			<StuffPower_Armor_Sharp>1.35</StuffPower_Armor_Sharp>
			<StuffPower_Armor_Blunt>0.30</StuffPower_Armor_Blunt>
			<StuffPower_Insulation_Cold>20</StuffPower_Insulation_Cold>
			<StuffPower_Insulation_Heat>20</StuffPower_Insulation_Heat>
		</statBases>
		<burnableByRecipe>true</burnableByRecipe>
		<healthAffectsPrice>false</healthAffectsPrice>
		<minRewardCount>30</minRewardCount>
		<stuffProps>
			<categories>
				<li>Fabric</li>
			</categories>
			<commonality>0.00</commonality>
			<color>(130,130,255)</color>
			<statFactors>
				<Flammability>1.2</Flammability>
				<MaxHitPoints>1.3</MaxHitPoints>
				<Beauty>3</Beauty>
			</statFactors>
		</stuffProps>
		<thingCategories>
			<li>Textiles</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompColorable</compClass>
			</li>
		</comps>
		<allowedArchonexusCount>80</allowedArchonexusCount>
	</ThingDef>

	<ThingDef ParentName="LeatherBase">
		<defName>undrgdrs_Fungus_Leather</defName>
		<label>fungus leather</label>
		<description>Almost impossible to distinguish from real leather, this concentrated mat of mycelium provides decent protection - though little in the way of insulation.</description>
		<graphicData>
			<color>(112,82,65)</color>
		</graphicData>
		<statBases>
			<MarketValue>3</MarketValue>
			<StuffPower_Armor_Sharp>1.12</StuffPower_Armor_Sharp>
			<StuffPower_Insulation_Cold>16</StuffPower_Insulation_Cold>
			<StuffPower_Insulation_Heat>16</StuffPower_Insulation_Heat>
		</statBases>
		<stuffProps>
			<color>(200,115,30)</color>
			<commonality>0.00</commonality>
		</stuffProps>
	</ThingDef>
	
</Defs>