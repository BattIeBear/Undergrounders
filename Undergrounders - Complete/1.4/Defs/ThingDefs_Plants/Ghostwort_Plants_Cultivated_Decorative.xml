<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="CavePlantBase">
		<defName>undrgdrs_Plant_Ghostwort</defName>
		<label>ghostwort</label>
		<description>A beautiful, pale fungus cultivated for its appearance. While it grows quickly and is quite beautiful, it does not last long.\n\nIt can grow on fungal gravel, but only in darkness - exposing it to any kind of light, including darklights, will kill it.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>18</Beauty>
			<BeautyOutdoors>18</BeautyOutdoors>
			<Nutrition>0.05</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Ghostwort</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<selectable>true</selectable>
		<ingestible>
			<canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
		</ingestible>
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<sowWork>540</sowWork> <!-- 120 ticks per live day for beauty -->
			<sowTags>
				<li>Decorative</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<growDays>1.5</growDays>
			<lifespanDaysPerGrowDays>3</lifespanDaysPerGrowDays>
			<visualSizeRange>0.3~1.05</visualSizeRange>
			<wildOrder>0</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>

	<ThingDef ParentName="CavePlantBase">
		<defName>undrgdrs_Plant_Glowstool</defName>
		<label>glowstool</label>
		<description>A domestic variant, it lacks the foul smell of the wild glowstool and gives off a pleasently dim light.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			 <Beauty>14</Beauty>
			<BeautyOutdoors>14</BeautyOutdoors>
			<Nutrition>0.05</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Glowstool</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<selectable>true</selectable>
		<ingestible>
			<canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
		</ingestible>
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<sowWork>750</sowWork> <!-- 100 ticks per live day -->
			<sowTags>
				<li>Decorative</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<growDays>1.5</growDays>
			<lifespanDaysPerGrowDays>5</lifespanDaysPerGrowDays>
			<visualSizeRange>0.3~1.05</visualSizeRange>
			<wildOrder>0</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>5.9</glowRadius>
				<glowColor>(78,226,229,0)</glowColor>
			</li>
		</comps>
	</ThingDef>

</Defs>